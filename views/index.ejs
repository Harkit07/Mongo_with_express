<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Whattsapp Chats</title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH"
      crossorigin="anonymous"
    />
    <link rel="stylesheet" href="style.css" />
  </head>
  <body>
    <h1>Here are all the chats</h1>
    <form action="http://localhost:8080/chats/new" method="get">
      <button class="btn btn-warning">New Message</button>
    </form>
    <hr />
    <% for(let chat of chats) { %>
    <div class="card">
      <div class="card-header">
        <h3>Id: <%= chat.id %></h3>
      </div>
      <div class="content">
        <h5 class="card-title">From: <b><%= chat.from %></b></h5>
        <div class="msg">
          <p class="card-text">Message: <%= chat.msg %></p>
        </div>
        <h5 class="card-title">To: <b><%= chat.to %></b></h5>
        <form method="get" action="http://localhost:8080/chats/<%= chat._id %>/edit">
          <button class="btn btn-info">Edit</button>
        </form>
        <form method="post" action="http://localhost:8080/chats/<%= chat._id %>?_method=DELETE">
          <button class="btn btn-info">Delete</button>
        </form>
      </div>
    </div>
    <% } %>
  </body>
</html>
